#include "stdafx.h" 
 
#include<locale.h> 
#include<stdio.h> 
#include<stdlib.h> 
#include<Windows.h> 
bool cheak(char *s, int n) { //функция проверки гласных 
 for (int i = 1; i < n; i++) 
  if (s[i] == 'а' || s[i] == 'у' || s[i] == 'о' || s[i] == 'ы' || s[i] == 'и' || s[i] == 'э' || s[i] == 'я' || s[i] == 'ю' || s[i] == 'е' || s[i] == 'ё') //является ли символ глассной 
   if (s[i] == s[i - 1]) return true; // если придыдущий символ глассная и совподает с текущим возращаем ПРАВДА 
 
 return false; 
} 
 
int main() 
{ 
 setlocale(LC_ALL, "Rus"); 
 SetConsoleOutputCP(1251); 
 SetConsoleCP(1251); 
 
 char *s, *w; 
 int n, len = 0, l = 0; 
 
 printf("Введите длинну строки: "); 
 scanf("%d", &n); 
 s = (char*)malloc(n * sizeof(char));
 w = (char*)malloc(2 * n * sizeof(char)); 
 
 rewind(stdin);
 printf("Введите строку: "); 
 gets_s(s, n + 1); 
 for (int i = 0; i < n; i++) { 
  if (s[i] != ' ') {
   w[l] = s[i]; 
   l++; 
  } 
  if (i == n - 1 || s[i] == ' ') { 
   w[l] = s[n - 1]; 
   if (cheak(w, l)) { 
    for (int j = (i != (n-1) ? (i - l) : (i - l + 1)); j < i; j++) { //(i != (n-1) ? (i - l) : (i - l + 1)) 
     s[j] = s[j] - 32; 
    } 
   }    
   l = 0; 
  } 
   
 } 
 puts(s); 
  
 system("pause"); 
 return 0; 
}
