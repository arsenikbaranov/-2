#include "stdafx.h" 
 
#include<locale.h> 
#include<stdio.h> 
#include<stdlib.h> 
#include<Windows.h> 
bool cheak(char *s, int n) { //функция проверки гласных 
 for (int i = 1; i < n; i++) 
  if (s[i] == 'а' || s[i] == 'у' || s[i] == 'о' || s[i] == 'ы' || s[i] == 'и' || s[i] == 'э' || s[i] == 'я' || s[i] == 'ю' || s[i] == 'е' || s[i] == 'ё') //является ли символ глассной 
   if (s[i] == s[i - 1]) return true; // если придыдущий символ глассная и совподает с текущим возращаем ПРАВДА 
 
 return false; 
} 
 
int main() 
{ 
 setlocale(LC_ALL, "Rus"); 
 SetConsoleOutputCP(1251); //две строки для обработки русских символов 
 SetConsoleCP(1251); 
 
 char *s, *w; //s - наша строка w - слово 
 int n, len = 0, l = 0; //n - длинна строки, len - индекс первого двоиточия, l - индекс второго двоиточия(-1 для проверки было ли встречено второе двоиточие) 
 
 printf("Введите длинну строки: "); 
 scanf("%d", &n); 
 s = (char*)malloc(n * sizeof(char)); //выделение памяти под строку 
 w = (char*)malloc(2 * n * sizeof(char)); //выделение памяти под слово 
 
 rewind(stdin); //отчистка буффера ввода 
 printf("Введите строку: "); 
 gets_s(s, n + 1); 
 for (int i = 0; i < n; i++) { 
  if (s[i] != ' ' && s[i] != '.') { //проверка является ли элемент пробелом 
   w[l] = s[i]; //посимвольно записываем слово из строки 
   l++; //прибовляем длинну строки 
  } 
  if (i == n - 1 || s[i] == ' ' || s[i] == '.') { 
   w[l] = s[n]; //добавляем ноль символ в конец 
   if (cheak(w, l)) { // 
    for (int j = (i != (n - 1) ? (i - l) : (i - l + 1)); j < i; j++) { //(i != (n-1) ? (i - l) : (i - l + 1)) - если i не равно n-1 то мы используем i - l в качестве ограничителя цикла, если равно то i-l+1 так как конец тсроки 
     s[j] = s[j] - 32; //делаем маленькие буквы больгими 
    } 
   } 
   l = 0; 
  } 
 
 } 
 puts(s); 
 
 system("pause"); 
 return 0; 
}
