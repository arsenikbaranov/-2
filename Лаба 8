#include<locale.h> 
#include<stdio.h> 
#include<stdlib.h> 
 
 
int main() 
{ 
 setlocale(LC_ALL, "Rus"); 
 char* s; //наша строка 
 int n, index1, index2 = -1; //n - длинна строки, index1 - индекс первого двоиточия, index2 - индекс второго двоиточия(-1 для проверки было ли встречено второе двоиточие) 
 bool f = false; //флаг для проверки было ли хоть одно двоиточие 
 
 printf("Введите длинну строки: "); 
 scanf_s("%d", &n); 
 s = (char*)malloc(n * sizeof(char)); //выделение памяти под строку 
 
 rewind(stdin); //отчистка буффера ввода 
 printf("Введите строку: "); 
 gets_s(s, n + 1); 
 for (int i = 0; i < n; i++) { 
  if (s[i] == ':') { //проверка является ли элемент двоиточием 
   if (!f) { //если не было встречено первого двоиточия 
    index1 = i; // запоминаем индекс первого двоиточия 
    f = true; //ставим флаг что первое двоиточие было встреченно 
   } 
   else { 
    index2 = i; //запоминаем инлекс воторого двоиточия 
    break; 
   } 
  } 
 } 
 if (f==true) 
 { 
  for (int i = index1 + 1; i < (index2 > -1 ? index2 : n); i++) { //(index2 > -1 ? index2 : n) - это проверка если index2 > -1 то мы испольщуем index2 в качестве переменной для ограничения цикла, иначе испольщуем n 
   printf("%c", s[i]); //выводим посимвольно строку 
  } 
 } 
 else printf("Двоеточий не было"); 
 printf("\n"); 
 system("pause"); 
 return 0; 
}
